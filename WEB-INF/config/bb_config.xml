<?xml version="1.0" encoding="utf-8"?>
<bbConfig>
	<!-- CODE -->
	<match name="code">
		<regex>(?s)\[code\](.*?)\[/code\]</regex>
		<replace>
		<![CDATA[
		<table class="code-table-simple" align="center">
		<tr> 
		<td><span class="genmed"><b>Code:</b></span></td>
		</tr>
		</table>
		<table class="code-table" align="center">
		<tr>
		<td class="code">
		<pre>$1</pre></td>
		</tr>
		</table>
		]]>
		</replace>
	</match>
	
	<match name="openSimpleQuote">
		<regex>\[quote\]</regex>
		<replace>
		<![CDATA[
		<table class="quote-table" align="center">
		<tr>
		<td class="quote">
		]]>
		</replace>
	</match>
	
	<match name="openQuote">
		<regex>\[quote=['"]?(.*?[^'"])['"]?\]</regex>
		<replace>
		<![CDATA[
		<table class="quote-table-simple" align="center">
		<tr> 
		<td><span class="genmed"><b>$1 wrote:</b></span></td>
		</tr>
		</table>
		
		<table class="quote-table" align="center">
		<tr>
		<td class="quote">
		]]>
		</replace>
	</match>
	
	<match name="closeQuote">
		<regex>\[/quote\]</regex>
		<replace>
		<![CDATA[
		&nbsp;
		</td>
		</tr>
		</table>
		]]>
		</replace>
	</match>

	<!-- B -->
	<match name="b">
		<regex>\[b\](.*?)\[/b\]</regex>
		<replace>
		<![CDATA[
		<b>$1</b>
		]]>
		</replace>
	</match>
	
	<!-- I -->
	<match name="i">
		<regex>\[i\](.*?)\[/i\]</regex>
		<replace>
		<![CDATA[
		<i>$1</i>
		]]>
		</replace>
	</match>
	
	<!-- U -->
	<match name="u">
		<regex>\[u\](.*?)\[/u\]</regex>
		<replace>
		<![CDATA[
		<u>$1</u>
		]]>
		</replace>
	</match>
	
	<!-- LIST -->
	<match name="list">
		<regex>\[list\](.*?)\[/list\]</regex>
		<replace>
		<![CDATA[
		<li> $1
		]]>
		</replace>
	</match>
	
	<!-- IMG -->
	<match name="img" removeQuotes="true">
		<regex>\[img\](.*?)\[/img\]</regex>
		<replace>
		<![CDATA[
		<img src="$1" border="0">
		]]>
		</replace>
	</match>

	<!-- Automatic URL matching -->
	<match name="auto-url" removeQuotes="true">
		<regex>([\t\r\n ])([a-z0-9]+?){1}://([\w\-]+\.([\w\-]+\.)*[\w]+(:[0-9]+)?(/[^ \"\n\r\t&lt;]*)?)</regex>
		<replace>
		<![CDATA[
		$1<a href="$2://$3" target="_blank">$2://$3</a>
		]]>
		</replace>
	</match>

	<match name="auto-url-simple" removeQuotes="true">
		<regex>([\t\r\n ])(www|ftp)\.(([\w\-]+\.)*[\w]+(:[0-9]+)?(/[^ \"\n\r\t&lt;]*)?)</regex>
		<replace>
		<![CDATA[
		$1<a href="http://$2.$3" target="_blank">$2.$3</a>
		]]>
		</replace>
	</match>
	
	<!-- URL -->
	<match name="simple-url" removeQuotes="true">
		<regex>\[url\](.*?)\[/url\]</regex>
		<replace>
		<![CDATA[
		<a href='$1' target='_new'>$1</a>
		]]>
		</replace>
	</match>
	
	<!-- URL=?? -->
	<match name="descriptive-url" removeQuotes="true">
		<regex>\[url=['"]?(.*?[^'"])['"]?\](.*?)\[/url\]</regex>
		<replace>
		<![CDATA[
		<a href="$1" target="_new">$2</a>
		]]>
		</replace>
	</match>
	
	<!-- COLOR -->
	<match name="color" removeQuotes="true">
		<regex>(?s)\[color=['"]?(.*?[^'"])['"]?\](.*?)\[/color\]</regex>
		<replace>
		<![CDATA[
		<font color='$1'>$2</font>
		]]>
		</replace>
	</match>

	<!-- SIZE -->
	<match name="size" removeQuotes="true">
		<regex>(?s)\[size=['"]?(.*?[^'"])['"]?\](.*?)\[/size\]</regex>
		<replace>
		<![CDATA[
		<span style="font-size: $1px; line-height: normal">$2</span>
		]]>
		</replace>
	</match>
</bbConfig>