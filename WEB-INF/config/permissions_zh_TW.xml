<?xml version="1.0" encoding="big5"?>
<sections>
	<sql refName="categories" queryName="CategoryModel.selectAll" valueField="categories_id" captionField="title"/>
	<sql refName="forums" queryName="ForumModel.selectAllForPermissions" valueField="forum_id" captionField="forum_name"/>

	<!-- Administration -->
	<section id="administration_section" title="系統管理">
		<permission id="perm_administration" title="擔任系統管理員" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
	</section>

	<!-- Categories -->
	<section id="categories_section" title="分區">
		<permission id="perm_category" title="受限制的分區" type="multiple">
			<sql ref="categories"/>
		</permission>
	</section>

	<!-- Restricted Forums -->
	<section id="forums_section" title="版面">
		<permission id="perm_forum" title="受限制的版面" type="multiple">
			<sql ref="forums"/>
		</permission>
	</section>

	<!-- Anonymous Posts -->
	<section id="anonymous_posts_section" title="匿名發表">
		<permission id="perm_anonymous_post" title="拒絕匿名發表" type="multiple">
			<sql ref="forums"/>
		</permission>
	</section>

	<!-- Post Reply but not allowed to create topics -->
	<section id="reply_only" title="只能回覆">
		<permission id="perm_reply_only" title="拒絕建立新主題但允許回覆既有文章(例如, 公告版面)" type="multiple">
			<sql ref="forums"/>
		</permission>
	</section>
	
	<!-- Create Sticky or Annoucement Topics  -->
	<section id="topics_sticky_announce" title="置頂或公告主題">
		<permission id="perm_create_sticky_announcement_topics" title="可以建立置頂或公告主題" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
	</section>

	<!-- Poll topics -->
	<section id="topics_poll" title="票選主題">
		<permission id="perm_create_poll" title="可以建立票選主題" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
	</section>

	<!-- Vote on polls -->
	<section id="topics_poll" title="投票">
		<permission id="perm_vote" title="可以對票選主題投票" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
	</section>

	<!-- Read-only forums -->
	<section id="read_only_forum" title="唯讀版面">
		<permission id="perm_read_only_forums" title="唯讀版面. 選擇'允許全部'將會 &lt;b&gt;取消&lt;/b&gt; 唯讀的標示" type="multiple">
			<sql ref="forums"/>
		</permission>
	</section>

	<!-- New Topics are moderated, but not replies -->
	<section id="moderate_replies" title="審核回覆">
		<permission id="perm_reply_without_moderation" title="審核或不能對需審核的版面回覆. 選擇'允許全部'將會 &lt;b&gt;取消&lt;/b&gt; 對回覆的審核, 然而選擇部份的版面將會強制回覆先等候審核" type="multiple">
			<sql ref="forums"/>
		</permission>
	</section>

	<!-- Html -->
	<section id="html_disabled" title="HTML 語法">
		<permission id="perm_html_disabled" title="在選取的版面中 HTML 語法是&lt;b&gt;不被允許的&lt;/b&gt;. 選擇'允許全部'將會允許在所有的版面使用 HTML 語法" type="multiple">
			<sql ref="forums"/>
		</permission>
	</section>

	<!-- Karma -->
	<section id="karma_disabled" title="評分">
		<permission id="perm_karma_enabled" title="啟用評分" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
	</section>

	<!-- Bookmarks -->
	<section id="bookmarks_disabled" title="書籤">
		<permission id="perm_bookmarks_enabled" title="啟用書籤" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
	</section>

	<!-- Attachments -->
	<section id="attachments_disabled" title="附加檔案">
		<permission id="perm_attachments_enabled" title="啟用附加檔案" type="multiple">
			<sql ref="forums"/>
		</permission>

		<permission id="perm_attachments_download" title="允許下載已存在的附加檔案" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
	</section>

	<!-- Misc -->
	<section id="misc_section" title="其他 / 一般權限">
		<!-- Activate moderation log -->
		<permission id="perm_moderation_log" title="可以查閱管理活動日誌" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
	
		<!-- Full Moderation -->
		<permission id="perm_full_moderation_log" title="可以查閱 &lt;strong&gt;完整的&lt;/strong&gt; 管理活動日誌" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
	</section>
		
	<!-- Moderation -->
	<section id="moderation_section" title="版面管理">
		<!-- Is a moderator -->
		<permission id="perm_moderation" title="擔任版面管理員" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>

		<!-- Can approve / deny messages -->
		<permission id="perm_moderation_approve_messages" title="可以核准 / 拒絕待審核版面上的文章" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>

		<!-- Restricted forums to moderate -->		
		<permission id="perm_moderation_forums" title="不能審核這些版面:" type="multiple">
			<sql ref="forums"/>
		</permission>
		
		<!-- Post removal -->
		<permission id="perm_moderation_post_remove" title="可以刪除文章" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
		
		<!-- Post edit -->
		<permission id="perm_moderation_post_edit" title="可以修改文章" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
		
		<!-- topic Moving -->
		<permission id="perm_moderation_topic_move" title="可以在版面間搬移文章" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
		
		<!-- Lock and Unlock topics -->
		<permission id="perm_moderation_topic_lockUnlock" title="可以鎖定和解除鎖定主題" type="single">
			<option value="deny" description="否"/>
			<option value="allow" description="是"/>
		</permission>
	</section>
</sections>
