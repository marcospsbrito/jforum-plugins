<?xml version="1.0" encoding="GB2312"?>   
<sections>   
    <sql refName="categories" queryName="CategoryModel.selectAll" valueField="categories_id" captionField="title"/>   
    <sql refName="forums" queryName="ForumModel.selectAllForPermissions" valueField="forum_id" captionField="forum_name"/>   
   
    <!-- Administration -->   
    <section id="administration_section" title="越级管理员">   
        <permission id="perm_administration" title="是否为越级管理员" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
    </section>   
   
    <!-- Categories -->   
    <section id="categories_section" title="分类管理">   
        <permission id="perm_category" title="限制的分类" type="multiple">   
            <sql ref="categories"/>   
        </permission>   
    </section>   
   
    <!-- Restricted Forums -->   
    <section id="forums_section" title="版块">   
        <permission id="perm_forum" title="限制的版块" type="multiple">   
            <sql ref="forums"/>   
        </permission>   
    </section>   
   
    <!-- Anonymous Posts -->   
    <section id="anonymous_posts_section" title="匿名发帖">   
        <permission id="perm_anonymous_post" title="禁止匿名用户发帖" type="multiple">   
            <sql ref="forums"/>   
        </permission>   
    </section>   
   
    <!-- Post Reply but not allowed to create topics -->   
    <section id="reply_only" title="只允许回复">   
        <permission id="perm_reply_only" title="禁止发主体帖,允许回复帖子" type="multiple">   
            <sql ref="forums"/>   
        </permission>   
    </section>   
       
    <!-- Create Sticky or Annoucement Topics  -->   
    <section id="topics_sticky_announce" title="设置主题置顶,公告等">   
        <permission id="perm_create_sticky_announcement_topics" title="允许将主题设置为公告或置顶主题" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
    </section>   
   
    <!-- Poll topics -->   
    <section id="topics_poll" title="发起投票">   
        <permission id="perm_create_poll" title="可发起投票帖" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
    </section>   
   
    <!-- Vote on polls -->   
    <section id="topics_poll" title="投票">   
        <permission id="perm_vote" title="允许投票" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
    </section>   
   
    <!-- Read-only forums -->   
    <section id="read_only_forum" title="只读版块">   
        <permission id="perm_read_only_forums" title="只读版块.选择允许所有表示禁止标签，也就是可回复。" type="multiple">   
            <sql ref="forums"/>   
        </permission>   
    </section>   
   
    <!-- New Topics are moderated, but not replies -->   
    <section id="moderate_replies" title="限制回复">   
        <permission id="perm_reply_without_moderation" title="选择 '允许全部'将不限制对所有版块的回复,选中指定的版块代表不允许在选择的版本中回复信息." type="multiple">   
            <sql ref="forums"/>   
        </permission>   
    </section>   
   
    <!-- Html -->   
    <section id="html_disabled" title="HTML标签">   
        <permission id="perm_html_disabled" title="选中的版块代表不允许使用HTML标签 .选择‘允许所有’代表允许所有版面使用HTML标签" type="multiple">   
            <sql ref="forums"/>   
        </permission>   
    </section>   
   
    <!-- Karma -->   
    <section id="karma_disabled" title="文章评分">   
        <permission id="perm_karma_enabled" title="使用文章评分" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
    </section>   
   
    <!-- Bookmarks -->   
    <section id="bookmarks_disabled" title="书签">   
        <permission id="perm_bookmarks_enabled" title="允许使用书签" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
    </section>   
   
    <!-- Attachments -->   
    <section id="attachments_disabled" title="附件相关">   
        <permission id="perm_attachments_enabled" title="是否允许使用附件,选择'允许全部'代表可以使用,选择指定版块代表不允许在选中的版块中使用附件" type="multiple">   
            <sql ref="forums"/>   
        </permission>   
   
        <permission id="perm_attachments_download" title="允许下载附件" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
    </section>   
       
    <!-- Moderation -->   
    <section id="moderation_section" title="版主">   
        <!-- Is a moderator -->   
        <permission id="perm_moderation" title="是否允许设置为版主" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
   
        <!-- Can approve / deny messages -->   
        <permission id="perm_moderation_approve_messages" title="是否在允许的版块里审核/封锁贴子" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
   
        <!-- Restricted forums to moderate -->           
        <permission id="perm_moderation_forums" title="不能修改的论坛:" type="multiple">   
            <sql ref="forums"/>   
        </permission>   
           
        <!-- Post removal -->   
        <permission id="perm_moderation_post_remove" title="删除贴子" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
           
        <!-- Post edit -->   
        <permission id="perm_moderation_post_edit" title="修改贴子" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
           
        <!-- topic Moving -->   
        <permission id="perm_moderation_topic_move" title="移动贴子" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
           
        <!-- Lock and Unlock topics -->   
        <permission id="perm_moderation_topic_lockUnlock" title="锁定和解锁主题" type="single">   
            <option value="deny" description="不允许"/>   
            <option value="allow" description="允许"/>   
        </permission>   
    </section>   
</sections>  
